<%- include('../views/templates/header.ejs'); %>
<script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>

<link rel="stylesheet" href="css/boardProducts.css">

<div class="container">
	
    <div class="row">
        <div class="col-lg-12">
            <div class="main-box clearfix">
                <div class="table-responsive">
                    <table class="table user-list" id="productsData">
                        <thead>
                        <tr>
                        <th><span>ID</span></th>
                        <th><span>Products</span></th>
                        <th><span>Name</span></th>
                        <th><span>Created</span></th>
                        <th class="text-center"><span>Price</span></th>
                        <th>
                            <a href="/createProduct" class="table-link info">
                                <i class="fa fa-plus-circle" aria-hidden="true">Ajout produit</i> 
                            </a>
                        </th>
                        </tr>
                        </thead>

                        <tbody>
                            <% products.forEach(product => { %>
                                <tr> 
                                    <td>  <%- product._id %>  </td>  
                                    <td> <% if(product.image=="https://place-hold.it/150"){%>
                                            <img src="https://place-hold.it/150" alt="" />
                                            <%}else{%>  
                                                <img src="upload/<%- product.image %>" alt="" width="50" height="50" />   
                                            
                                                <%} product.name %>  
                                    </td> 
                                    <td>  <%- product.name %>  </td> 
                                    <td>  <%- product.date %>  </td> 
                                     <td>  <%- product.price %>  </td> 
                                     <td style='width: 20%;'>
                                        <a href='products/<%- product._id%>' class='table-link'>
                                        <span class='fa-stack'>
                                        <i class='fa fa-square fa-stack-2x'></i>
                                        <i class='fa fa-search-plus fa-stack-1x fa-inverse'></i></span></a>
                            
                                        <a href='updateProduct/<%- product._id %>' class='table-link'>
                                            <span class='fa-stack'>
                                                <i class='fa fa-square fa-stack-2x'></i>
                                                <i class='fa fa-pencil fa-stack-1x fa-inverse'></i>
                                            </span>
                                        </a>
                            
                                        <a href='deleteProduct/<%- product._id %>' class='table-link danger'>
                                             <span class='fa-stack'>
                                             <i class='fa fa-square fa-stack-2x'></i>
                                             <i class='fa fa-trash-o fa-stack-1x fa-inverse'></i>
                                             </span>
                                        </a>
                                    </td>  
                                    </tr>
                              <% }); %>
                            
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
<%- include('../views/templates/footer.ejs'); %>