<%- include('../views/templates/header.ejs'); %>
    <link rel="stylesheet" href="css/accueil.css">
    <div class="container">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="image/F7-CW.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="image/FID.jpg" class="d-block w-100" alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-target="#carouselExampleIndicators"
                data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-target="#carouselExampleIndicators"
                data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </button>
        </div>
        <div class="row clearfix">
            <% products.forEach(product=> { %>
                <div class="col-lg-3 col-md-4 col-sm-12">
                    <div class="card product_item">
                        <div class="body">
                            <div class="cp_img">
                                <% if(product.image=="https://place-hold.it/150" ){%>
                                    <img src="https://place-hold.it/150" class="img-fluid" alt="" />
                                    <%}else{%>
                                        <img src="upload/<%- product.image %>" class="img-fluid" alt="" width="300"
                                            height="300" onclick="redirectToProduct('<%- product._id %>')" />
                                        <%}%>
                            </div>
                            <div class="product_details">
                                <h5><a href="products/<%- product._id%>"><%- product.name %></a></h5>
                                <ul class="product_price list-unstyled">
                                    <li class="new_price"><%- product.price %> â‚¬</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                </div>
                <% }); %>
        </div>
    </div>

    <script>
        function redirectToProduct(id) {
            window.location.href = "/products/" + id;
        }
    </script>
    <%- include('../views/templates/footer.ejs'); %>