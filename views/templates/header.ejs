<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CFK - <%- title %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/3456657236.js" crossorigin="anonymous"></script>
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-danger navbar-dark" style="margin-top: 0px;">
        <!-- Container wrapper -->
        <div class="container-fluid">
            <!-- Navbar brand -->
            <a class="navbar-brand" href="/">
                <img src="/image/cfk_logo.png" alt="logo" width="32" height="32" />
                CFK
            </a>

            <!-- Icons -->
            <ul class="navbar-nav d-flex flex-row me-1">


                <% if (user) { %>
                    <% if (user.role === 'admin') { %>
                        <li class="nav-item me-3 me-lg-0">
                            <a class="nav-link text-white" href="/products">Backoffice</a>
                        </li>
                    <% } %>
                    <li class="nav-item me-3 me-lg-0">
                        <a class="nav-link text-white" href="/profile">Mon compte</a>
                    </li>
                    <li class="nav-item me-3 me-lg-0">
                        <a class="nav-link text-white" href="/logout">Deconnexion</a>
                    </li>
                    <li class="nav-item me-3 me-lg-0">
                        <a class="nav-link text-white" href="#">
                            <i class="fa-solid fa-cart-shopping"></i>
                            <span class="badge badge-info"><% nb_products %></span>
                        </a>
                    </li>
                    
                    <% }else{%>
                        <li class="nav-item me-3 me-lg-0">
                            <a class="nav-link text-white" href="/login">Connexion</a>
                        </li>
                        <li class="nav-item me-3 me-lg-0">
                            <a class="nav-link text-white" href="/register">Inscription</a>
                        </li>
                        <% }%>


            </ul>
        </div>

        <!-- Container wrapper -->
    </nav>
    <!-- Navbar -->


    <div class="container mt-5">
        <% if (typeof error !=='undefined' && error !==null) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Une erreur est survenue !</strong> <%= error %>.
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <% } else if (typeof success !== 'undefined' && success !== null) { %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Bravo !</strong> <%= success %>.
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            <% } %>
    </div>